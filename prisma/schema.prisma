generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Comands {
  id        Int      @id @default(autoincrement())
  key       String
  value     String
}

model DefaultsMsg {
  id        Int      @id @default(autoincrement())
  key       String
  value     String
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Admins {
  id        Int      @id @default(autoincrement())
  senderId  String
  groupId   String
}

model Msgs {
  id        Int      @id @default(autoincrement())
  key       String
  value     Json
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isHot     Boolean  @default(false)
}



